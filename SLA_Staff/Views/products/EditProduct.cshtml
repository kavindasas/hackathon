
@{
    ViewBag.Title = "EditProduct";
}

<h2>EditProduct</h2>

<div class="row">
    <div class="col-sm-12" style="background-color:black; text-align:left;min-height:60px;">
        <h3 style="color:#36b3e2;padding-left:60px;position:absolute">
            Add New Staff Person
        </h3>


    </div>




    <!-- form column -->

    <div class="col-md-10 personal-info" style="padding-left:20%">
        <h3>Edit Product</h3>

        <form class="form-horizontal" role="form" method="post" action="~/products/Edit">
            <div class="form-group">
                <label class="col-lg-3 control-label">ID</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" name="txtid" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Name</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" name="txtname" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Qty</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" name="txtqty" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Price</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" name="txtprice" value="">
                </div>
            </div>
        </form>
    </div>
    @*end of form*@

</div>