@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = " Add New Staff";
}

<div class="row">
    <div class="col-sm-12" style="background-color:black; text-align:left;min-height:60px;">
        <h3 style="color:#36b3e2;padding-left:60px;position:absolute">
            Add New Staff Person
        </h3>


    </div>




    <!-- form column -->

    <div class="col-md-10 personal-info" style="padding-left:20%">
        <h3>Personal info</h3>

        <form class="form-horizontal" role="form" method="post" action="~/Staff/Create">
            <div class="form-group">
                <label class="col-lg-3 control-label">Staff No</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" name="txtid" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Name</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" name="name" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Prefered Name</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" name="pname" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Cost Centre</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" name="cc" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Designation</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" name="des" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Grade</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" name="grade" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Company Joined Date</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" name="Jdate" value="YYYY/MM/DD">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">IT_Dept Joined Date</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" name="ITdate" value="YYYY/MM/DD">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">No Pay</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" name="nopay" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Availability</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" name="ava" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">
                    <input type="submit" class="btn btn-primary" value="Save Changes">
                    <span></span>
                    <input type="reset" class="btn btn-default" value="Cancel">
                </div>
            </div>
        </form>
    </div>
    @*end of form*@

</div>


