
@{
    ViewBag.Title = "Staff";
}



<div class="row">
    <div class="col-sm-12" style="background-color:black; text-align:left;min-height:60px;">
        <h3 style="color:#36b3e2;padding-left:60px;position:absolute">
            SLA Staff 
        </h3>

        
    </div>

    




    <div class="col-sm-12" style="background-color:#fff;z-index:1;margin:0.5%;">
        <div class="col-sm-12" style="padding:10px;">
            <h4><b>Candidates List</b></h4>
        </div>
            <table class="myTable">
                <tr>
                    <th>
                        Staff #
                    </th>
                    <th>
                        Cost Centre
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Preferd Name
                    </th>
                    <th>
                        Designation
                    </th>
                    <th>
                        Grade
                    </th>
                    <th>
                        Company-Date Joined
                    </th>
                    <th>
                        IT Dept Joined
                    </th>
                    <th>
                        No Pay
                    </th>
                    <th>
                        Availability
                    </th>
                    <th>
                        Promotions/Training And Dev
                    </th>
                    <th>
                        Edit
                    </th>
                </tr>

                @foreach (var p in ViewData["staffDetails"] as List<SLA_Staff.Models.staffPerson>)
                {
                    <tr>
                        <td>
                            @p.Id
                        </td>
                        <td>
                            @p.CostC
                        </td>
                        <td>
                            @p.Name
                        </td>
                        <td>
                            @p.Pname1
                        </td>
                        <td>
                            @p.Designation
                        </td>
                        <td>
                            @p.Grade
                        </td>
                        <td>
                            @p.CompanyJoined
                        </td>
                        <td>
                            @p.DeptJoined
                        </td>
                        <td>
                            @p.NoPay1
                        </td>
                        <td>
                            @p.Availability
                        </td>
                        <td>
                            <a href="@Url.Action("AddPromotions", "Staff", new { staffID=@p.Id })">
                                Add
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Details", "Staff", new { id=@p.Id })">
                                Edit
                            </a>
                        </td>
                    </tr>
                }




            </table>
    </div>






 


</div>
